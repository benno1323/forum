<%= form_for([:admin, @topic, @comment]) do |f| %>
	<div class="form-group">
		<%= f.label :content %>
		<%= f.text_area :content, class: 'form-control', readonly: 'readonly' %>
	</div>

	<div class="form-group">
		<%= f.select(:topic_id, options_for_select(@comment_options, selected: @comment.topic_id), {}, { class: 'form-control' }) %>
	</div>

	<%= f.submit class: 'btn btn-submit' %>

<% end %>