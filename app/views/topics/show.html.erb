<h2><%= @topic.subject %></h2>

<p><%= @topic.body %></p>

<table class="table">
	<tbody>
	<% @topic.comments.each do |comment| %>
		<tr>
			<td><%= comment.content %></td>
		</tr>
	<% end %>
	</tbody>
</table>


<%= render 'comments/form' if user_signed_in? %>
<br><br>
<%= link_to 'Back', category_path(@topic.category_id), class: 'btn btn-danger' %>