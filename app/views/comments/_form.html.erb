<%= form_for([@topic, @comment]) do |f| %>

	<% if @comment.errors.any? %>
		<ul>
			<% @comment.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	<% end %>

	<div class="form-group">
		<%= f.label :content %>
		<%= f.text_field :content, class: 'form-control' %>
	</div>

	<%= f.submit class: 'btn btn-submit' %>
<% end %>