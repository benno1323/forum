<div class="table-responsive">
	<table class="table">
		<thead>
			<tr>
				<th>Category</th>
				<th>Latest</th>
				<th>Topics</th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each do |cat| %>
			<tr>
				<td><%= link_to cat.name, category_path(cat) %></td>
				<td><%= cat.topics.empty? ? 'No topic yet!' : cat.topics.last.body.truncate(20) %></td>
				<td><%= cat.topics.count %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>